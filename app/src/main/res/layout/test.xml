<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entity.AccountCreation.VerifyAccountActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_login_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_semibold"
            android:hint="Phone number"
            android:id="@+id/login_phone_number"
            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_login_phone_number">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_semibold"
            android:hint="Verification Code"
            android:id="@+id/verificartion_code"
            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/layout_verification_code"
        android:fontFamily="@font/proxima_nova_semibold"
        android:background="@drawable/login_button_background"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/send_otp_button"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/send_otp_button"
        android:fontFamily="@font/proxima_nova_semibold"
        android:background="@drawable/login_button_background"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/verify_button"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/verify_button"
        android:fontFamily="@font/proxima_nova_semibold"
        android:background="@drawable/login_button_background"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/resend_button"/>

</android.support.constraint.ConstraintLayout>

